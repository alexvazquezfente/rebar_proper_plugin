{erl_opts, [debug_info]}.
{xref_checks, [undefined_function_calls]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.
{lib_dirs, ["deps"]}.

{deps, [
        {edown, ".*", {git, "git://github.com/esl/edown.git", "HEAD"}},
        {rebar, ".*", {git, "https://github.com/rebar/rebar.git", "master"}}
       ]}.

{edoc_opts, [{doclet, edown_doclet},
             {top_level_readme,
              {"./README.md", "http://github.com/andrzejsliwa/rebar_proper_plugin"}}]}.
